{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "pixel-basket",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true,
        "scope": [
          {
            "name": "cmd",
            "cmd": "cmd",
            "args": true
          },{
            "name": "xdg-open",
            "cmd": "xdg-open",
            "args": true
          }
        ]
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "**"
        ]
      }
    },
    "windows": [
      {
        "title": "像素篮子",
        "width": 1280,
        "height": 800,
        "label": "main",
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; media-src 'self' asset: https://asset.localhost"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.smooth.pixel-basket",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
